{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "skipLibCheck": true,
    "types": ["jest", "node"],

    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": false,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "src",
    "paths": {
      "@styles/*": ["styles/*"],
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@apis/*": ["apis/*"]
    }
  },
  "include": ["src", "__tests__/example.test.tsx"],
  "exclude": ["node_modules"]
}
